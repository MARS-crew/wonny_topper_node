  <script>
    let DT = null;
    let counsel_id = "";
    let file_id = null;

    //페이지네이션 
    let currentListCount = 0;
    let page = 1;
    let allDataCount = 0;
    const rangeSize = 5;
    const pageSize = 10;
    let curDataCount = 0;
    let startIndex = 1;

    //검색
    let from_date = null;
    let to_date = null;
    let search_word = "";
    let purpose = [1, 2, 3, 4, 5, 6];
    let sort = "DESC";
    let answer_yn = ['N', 'Y'];

    const myHeaders = new Headers();
    myHeaders.append("Content-Type", "application/json");

    window.onload = () => {
      $('#from-date, #to-date').datepicker({
        format: 'yyyy-mm-dd',
        autoclose: true,
        todayHighlight: true,
        placement: 'bottom',
        orientation: 'auto bottom',
        defaultDate: new Date()
      });

      const today = dayjs();
      const formattedDate = today.format('YYYY-MM-DD');
      $('#from-date, #to-date').datepicker('setDate', formattedDate);
    }

    $(document).ready(function () {
      const lang = {
        decimal: '',
        emptyTable: '데이터가 없습니다.',
        thousands: ',',
        zeroRecords: '검색된 데이터가 없습니다.',
      }

      DT = $('#dataTable').DataTable({
        info: false,
        language: lang,
        bFilter: false,
        ordering: false,
        lengthChange: false,
        paginate: false,
        columns: [
          { width: '10px' },
          { width: '10%' },
          { width: '10%' },
          { width: '10%' },
          null,
          { width: '10%' },
          { width: '20%' },
          { width: '20%' },
        ],
      });
      showListData();

      $('#dataTable tbody').on('click', '.content-list', function () {
        counsel_id = $(this).data('counsel-id');
        console.log('선택한 행의 데이터:', counsel_id);
        openModal();
        showCounselData();
      });

    })

    $('#orderSelect').on('change', function () {
      sort = $(this).val();
      showListData();
    });

    $('#checkAll').change(function () {
      $('.ck').prop('checked', $(this).prop('checked'));
    });

    $('.ck').change(function () {
      if ($('.ck:checked').length === $('.ck').length) {
        $('#checkAll').prop('checked', true);
      } else {
        $('#checkAll').prop('checked', false);
      }
    });

    const onClickSearch = () => {
      const checkboxes = document.querySelectorAll('.filter-purpose input[type="checkbox"]:checked:not(#checkAll)');
      purpose = [];
      checkboxes.forEach(function (checkbox) {
        purpose.push(parseInt(checkbox.value));
      });
      const answer_yn_radio = document.querySelector('input[name="answer_yn"]:checked').value;
      answer_yn = answer_yn_radio == 'all' ? ["Y", "N"] : [answer_yn_radio];
      search_word = document.getElementById('keyword').value;
      from_date = document.getElementById('from-date').value;
      to_date = document.getElementById('to-date').value;

      sort = "DESC";
      page=1;
      showListData();
    }

    //리스트 조회 
    const showListData = async () => {
      const raw = JSON.stringify({
        from_date,
        to_date,
        purpose,
        search_word,
        sort,
        page,
        pageSize,
        answer_yn
      });

      console.log("바디" + raw);

      const requestOptions = {
        method: 'POST',
        headers: myHeaders,
        body: raw,
        redirect: 'follow'
      };

      try {
        const response = await fetch(`/counsel/select`, requestOptions);
        const { code, message, data } = await response.json();
        if (code === 200) {
          DT.clear().draw();

          startIndex = ((page - 1) * pageSize) + 1;
          let purposeStr = "";
          let curDataCount = 0;
          data.counsel.forEach(function (row, i) {
            ++curDataCount;
            switch (row.purpose) {
              case 1:
                purposeStr = "풍선 장식"
                break;
              case 2:
                purposeStr = "토퍼"
                break;
              case 3:
                purposeStr = "부스체험(토퍼,풍선)"
                break;
              case 4:
                purposeStr = "삐에로"
                break;
              case 5:
                purposeStr = "페이스페인팅"
                break;
              case 6:
                purposeStr = "클래스"
                break;
            }

            const tr = DT.row.add([
              i + startIndex,
              row.name,
              row.phone_num,
              purposeStr,
              row.detail,
              row.answer_yn,
              row.answer_date ? dayjs(row.answer_date).format(
                "YYYY-MM-DD") : "-",
              dayjs(row.reg_date).format(
                "YYYY-MM-DD"
              ),
            ]).node();

            $(tr).attr('data-counsel-id', row.counsel_id);
            $(tr).addClass('content-list');
            // $(tr).attr('href', '#');
            $(tr).attr('data-toggle', 'modal');
            if (row.answer_yn === 'Y') {
              $(tr).attr('data-target', '#consultDetailModal');
            } else if (row.answer_yn === 'N') {
              $(tr).attr('data-target', '#consultModal');
            }

            DT.draw(false);

          });
          allDataCount = data.count;
          paginate(curDataCount);

          const listInfoContainer = document.getElementById('list_info');
          listInfoContainer.innerHTML = `Showing ${startIndex} to ${startIndex + curDataCount - 1} of ${allDataCount} entriess`;

          return;
        }
      } catch (err) {
        console.log('Err:', err);
      }
