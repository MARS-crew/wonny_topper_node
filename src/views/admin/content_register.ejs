  <script>
    let formattedNow =null;
    let file_main_id = null;
    let file_1_id = null;
    let file_2_id = null;
    let file_3_id = null;
    let file_4_id = null;

    window.onload = () => {
      $('.date-pick').datepicker({
        dateFormat: 'yy-mm-dd',
        format: 'yyyy-mm-dd',
        autoclose: true,
        todayHighlight: true,
        placement: 'bottom',
        orientation: 'auto bottom'
      })
    }

    $(document).ready(function () {
      $('#dataTable').DataTable()
      const now = moment();
      formattedNow = now.format('YYYY-MM-DD HH:mm:ss');
      const createDate = document.querySelector('#createDate');
      const editDate = document.querySelector('#editDate');
      createDate.textContent = formattedNow;
      editDate.textContent = formattedNow;


    })

    const onClickCancleBtn = () => {
      if (confirm("등록을 취소하시겠습니까")) location.href = "/admin/content_main";
    }
    const uploadFormData = async (i) => {
      const fileInput = event.target;
      const fileNameElement = document.getElementsByClassName("file-name");
      const cancelButton = document.getElementsByClassName("cancel-btn");
      const input = document.getElementsByName("productImgArr[]");
      const file = input[i].files[0];

      if (fileInput.files.length > 0) {
        const fileName = fileInput.files[0].name;
        fileNameElement[i].textContent = fileName;
        fileNameElement[i].style.display = "block";
        cancelButton[i].style.display = "inline-block";
      } else {
        fileNameElement[i].style.display = "none";
        cancelButton[i].style.display = "none";
      }

      cancelButton[i].addEventListener("click", function () {
        fileInput.value = "";
        fileNameElement[i].textContent = "";
        cancelButton[i].style.display = "none";
      });


      const formData = new FormData();
      formData.append("file", file);


      var requestOptions = {
        method: 'POST',
        //        headers: myHeaders,
        body: formData,
        redirect: 'follow'
      };

      try {
        const response = await fetch(`/upload`, requestOptions);
        const { code, message, data } = await response.json();
        if (code === 200) {
          console.log(data);
          switch (i) {
            case 0:
              file_main_id = data.file_id;
              break;
            case 1:
              file_1_id = data.file_id;
              break;
            case 2:
              file_2_id = data.file_id;
              break;
            case 3:
              file_3_id = data.file_id;
              break;
            case 4:
              file_4_id = data.file_id;
              break;
            default:
              console.log(data.file_id);
          }
        }
      } catch (err) {
        console.log('Err:', err);
      }


    }


    const onClickSubmitBtn = async (e) => {
      e.preventDefault();

      const title = document.getElementById("title").value;
      const note = document.getElementById("note").value;
      const category = parseInt(document.getElementById("category").value);
      const requiredPhoto = document.getElementById("file1").value;

      if (title == "") {
        alert("필수값이 입력되지 않았습니다.");
        return false;
      }
      if (category == "") {
        alert("필수값이 입력되지 않았습니다.");
        return false;
      }
      if (requiredPhoto === "") {
        alert("필수값이 입력되지 않았습니다.");
        return false;
      }
      const regexTitle = /^[^\p{C}]{1,30}$/u; // 정규식 패턴
      const regexNote = /^[^\p{C}]{0,300}$/u; // 정규식 패턴

      if (!regexTitle.test(title)) {
        alert("제목은 국/영문, 숫자, 특수문자 최대 30자까지만 입력 가능합니다.");
        return false;
      }
      if (!regexNote.test(note)) {
        alert("비고는 국/영문, 숫자, 특수문자 최대 300자까지만 입력 가능합니다.");
        return false;
      }


      var raw = JSON.stringify({
        "admin_id": 1,
        category,
        title,
        note,
        file_main_id,
        file_1_id,
        file_2_id,
        file_3_id,
        file_4_id,
        "reg_date": formattedNow

      });

      var requestOptions = {
        method: 'POST',
        headers: myHeaders,
        body: raw,
        redirect: 'follow'
      };

      try {
        const response = await fetch(`/content/insert`, requestOptions);
        const { code, message } = await response.json();
        if (code === 200) {
          alert("저장되었습니다.");
          window.location.href = "/admin/content_main";
        }
      } catch (err) {
        console.log('Err:', err);
      }

    }




