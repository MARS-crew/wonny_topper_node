  <script>
    window.onload = () => {
      $('.date-pick').datepicker({
        dateFormat: 'yy-mm-dd',
        format: 'yyyy-mm-dd',
        autoclose: true,
        todayHighlight: true,
        placement: 'bottom',
        orientation: 'auto bottom'
      })
    }

    $(document).ready(function () {
      $('#dataTable').DataTable()
      const now = moment();
      const formattedNow = now.format('YYYY-MM-DD HH:mm:ss');
      const createDate = document.querySelector('#createDate');
      const editDate = document.querySelector('#editDate');
      createDate.textContent = formattedNow;
      editDate.textContent = formattedNow;


    })

    const onClickCancleBtn = () => {
      if (confirm("등록을 취소하시겠습니까")) location.href = "/admin/content_main";
    }
    function uploadFormData(i) {
      const input = document.getElementsByName("productImgArr[]");
      const file = input[i].files[0];

      const formData = new FormData();
      formData.append("file", file);

      fetch("/upload", {
        method: "POST",
        body: formData,
      })
        .then((response) => response.text())
        .then((data) => {
          console.log(data); // 파일 업로드 완료 후 서버의 응답 출력
        })
        .catch((error) => {
          console.error("Error:", error);
        });
    }

    const onClickSubmitBtn = async (e) => {
      e.preventDefault();

      const title = document.getElementById("title").value;
      const note = document.getElementById("note").value;
      const category = document.getElementById("category").value;
      const requiredPhoto = document.getElementById("file1").value;

      if (title == "") {
        alert("필수값이 입력되지 않았습니다.");
        return false;
      }
      if (category == "") {
        alert("필수값이 입력되지 않았습니다.");
        return false;
      }
      if (requiredPhoto === "") {
        alert("필수값이 입력되지 않았습니다.");
        return false;
      }


      var myHeadersC = new Headers();
      myHeadersC.append("Content-Type", "application/json");
      myHeadersC.append("Cookie", "connect.sid=s%3AauNLpeXzEgXtsif5KhegEgGvQGmNvU00.CETJp7Cu%2FXkU%2FjgMQ4tj09tO2%2FiLzSTpt5M7muWLslE");

      var raw = JSON.stringify({
        "member_id": "admin",
        category,
        title,
        note
      });

      var requestOptions = {
        method: 'POST',
        headers: myHeadersC,
        body: raw,
        redirect: 'follow'
      };

      try {
        const response = await fetch(`/content/insert`, requestOptions);
        const { code, message } = await response.json();
        if (code === 200) {
          alert("저장되었습니다.");
          window.location.href = "/admin/content_main";
        }
      } catch (err) {
        console.log('Err:', err);
      }

    }




  </script>

