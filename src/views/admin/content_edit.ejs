  <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/dayjs@1.10.7/dayjs.min.js"></script>

  <script src="/admin/assets/js/common.js"></script>
  <script>
    let fileId = [];
    let originRegDateTime = null;
    let selectDateTime = null;

    const params = new URLSearchParams(window.location.search);
    const content_id = params.get("content_id");

    const fileInputElArr = document.getElementsByName("productImgArr[]");
    const fileNameElArr = document.getElementsByClassName("file-name");
    const cancelElArr = document.getElementsByClassName("cancel-btn");
    Array.from(cancelElArr).forEach(function (cancelBtn, i) {
      cancelBtn.addEventListener("click", function () {
        fileInputElArr[i].value = "";
        fileId[i] = null;
        fileNameElArr[i].textContent = "";
        cancelBtn.style.display = "none";
        deleteFile(fileId[i]);
      });

      $(document).ready(function () {
        $("#dataTable").DataTable();
        showContent();
      });
    });

    window.onload = () => {
      $('.date-pick').datepicker({
        dateFormat: 'yy-mm-dd',
        format: 'yyyy-mm-dd',
        autoclose: true,
        todayHighlight: true,
        placement: 'bottom',
        orientation: 'auto bottom',
        templates: {
          leftArrow: '<i class="fa fa-angle-left"></i>',
          rightArrow: '<i class="fa fa-angle-right"></i>'
        },
        endDate: new Date(),
      })

    }

    for (var i = 0; i < 24; i++) {
      var hour = i.toString().padStart(2, "0");
      $(".hour").append("<option value='" + hour + "'>" + hour + "</option>");
    }
    for (var i = 0; i < 60; i++) {
      var minute = i.toString().padStart(2, "0");
      $(".minute").append("<option value='" + minute + "'>" + minute + "</option>");
    }
    for (var i = 0; i < 60; i++) {
      var second = i.toString().padStart(2, "0");
      $(".second").append("<option value='" + second + "'>" + second + "</option>");
    }

    $("#select-date, .hour, .minute, .second").change(function () {
      var selectDate = $("#select-date").val();
      var selectHour = $(".hour").val();
      var selectMinute = $(".minute").val();
      var selectSecond = $(".second").val();

      selectDateTime = dayjs(selectDate + " " + selectHour + ":" + selectMinute + ":" + selectSecond);
      var nowTime = dayjs();
      if (selectDateTime.isAfter(nowTime)) {
        $("#select-date").val(originRegDateTime.format("YYYY-MM-DD"));
        $(".hour").val(originRegDateTime.format("HH"));
        $(".minute").val(originRegDateTime.format("mm"));
        $(".second").val(originRegDateTime.format("ss"));
        selectDateTime = originRegDateTime;
        alert("현재 시간 이후로는 선택이 불가능합니다");
      }
    });

    const onClickCancleBtn = () => {
      if (confirm("등록을 취소하시겠습니까"))
        location.href = "/admin/content_main";
    };

    //컨텐츠 조회
    const showContent = async () => {
      const requestOptions = {
        method: 'GET',
        headers: myHeaders,
        body: JSON.stringify({
          content_id
        }),
        redirect: 'follow'
      };

      try {
        const response = await fetch(`/content/select/` + content_id);
        const { code, message, data } = await response.json();
        if (code === 200) {
          if (!data) {
            return;
          }

          const title = document.getElementById("title");
          const note = document.getElementById("note");
          const category = document.getElementById("category");
          const contentId = document.getElementById("content_id");
          const regDate = document.querySelector("#select-date");
          const modDate = document.querySelector("#mod_date");

          contentId.textContent = content_id;
          fileId[0] = data[0].file_main_id;
          fileId[1] = data[0].file_1_id;
          fileId[2] = data[0].file_2_id;
          fileId[3] = data[0].file_3_id;
          fileId[4] = data[0].file_4_id;
          member_id = data[0].member_id;
          title.value = data[0].title;
          note.value = data[0].note;
          if (data[0].exposure_yn === 'Y') {
            document.querySelector('.exposure.y').checked = true;
          } else {
            document.querySelector('.exposure.n').checked = true;
          }
          category.value = data[0].category;
          modDate.textContent = dayjs(data[0].mod_date).format(
            "YYYY-MM-DD HH:mm:ss"
          );
          originRegDateTime = dayjs(data[0].reg_date);
          selectDateTime = originRegDateTime.format(
            "YYYY-MM-DD HH:mm:ss"
          );
          regDate.value = originRegDateTime.format(
            "YYYY-MM-DD"
          );
          $(".hour").val(dayjs(data[0].reg_date).format("HH"));
          $(".minute").val(dayjs(data[0].reg_date).format("mm"));
          $(".second").val(dayjs(data[0].reg_date).format("ss"));

          const files = [data[0].file_main_id_origin_name, data[0].file_1_id_origin_name, data[0].file_2_id_origin_name, data[0].file_3_id_origin_name, data[0].file_4_id_origin_name];
          files.forEach((el, i) => {
            if (!(el == null)) {
              fileNameElArr[i].textContent = el;
              fileNameElArr[i].style.display = "inline";
              cancelElArr[i].style.display = "inline-block";
            }

          });
        }
      } catch (err) {
        console.log("Err:", err);
      }
    };

    //파일 등록
    const uploadFile = async (i) => {
      const file = fileInputElArr[i].files[0];
      if (file) {
        const fileSizeInBytes = file.size;
        const fileSizeInMB = fileSizeInBytes / (1024 * 1024); // 바이트를 메가바이트로 변환
        const maxSizeInMB = 3;
        if (fileSizeInMB > maxSizeInMB) {
          alert('파일 크기가 3MB를 초과하였습니다.');
          fileInputElArr[i].value = '';
          return
        }
      }

      if (fileId[i] != null) {
        fileId[i] = null;
        await deleteFile(fileId[i]);
      }

      if (file != null) {
        const fileName = file.name;
        fileNameElArr[i].textContent = fileName;
        fileNameElArr[i].style.display = "inline";
        cancelElArr[i].style.display = "inline-block";
      } else {
        fileNameElArr[i].style.display = "none";
        cancelElArr[i].style.display = "none";
      }

      const formData = new FormData();
      formData.append("file", file);

      const requestOptions = {
        method: 'POST',
        //headers: myHeaders,
        body: formData,
        redirect: 'follow'
      };

      try {
        const response = await fetch(`/upload`, requestOptions);
        const { code, message, data } = await response.json();
        if (code === 200) {
          fileId[i] = data.file_id;
        }else{
          console.log(message);
        }
      } catch (err) {
        console.log('Err:', err);
      }
    }

    //컨텐츠 수정
    const modContent = async () => {
      const requiredPhoto = document.getElementById("file1").value;
      const raw = {
        content_id,
        reg_date: dayjs(selectDateTime).format(
          "YYYY-MM-DD HH:mm:ss"
        ),
        exposure_yn: document.querySelector('input[name="exposure_yn"]:checked').value,
        category: document.getElementById("category").value,
        note: document.getElementById("note").value,
        title: document.getElementById("title").value,
        file_main_id: fileId[0],
        file_1_id: fileId[1],
        file_2_id: fileId[2],
        file_3_id: fileId[3],
        file_4_id: fileId[4],
      };

      if (!requireInput([raw.category, raw.title, raw.exposure_yn, raw.reg_date, raw.file_main_id])) {
        return;
      }

      const response = await fetch("/content/update", {
        method: 'POST',
        headers: myHeaders,
        body: JSON.stringify(raw),
        redirect: 'follow'
      });
      const { code, message } = await response.json();
      if (code === 200) {
        alert("수정되었습니다.");
        window.location.href = "/admin/content_main";

        return;
      }
      alert(message);
    };
  </script>
