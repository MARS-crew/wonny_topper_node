  <script>
    const tbody = document.getElementById("dataTable");
    let listcount = 0;
    const myHeaders = new Headers();
      myHeaders.append("Content-Type", "application/json");


    const lang = {
      decimal: '',
      emptyTable: '데이터가 없습니다.',
      info: 'Showing _START_ to _END_ of _TOTAL_ entries',
      infoFiltered: '(filtered from _MAX_ total entries)',
      infoPostFix: '',
      thousands: ',',
      lengthMenu: '_MENU_ 개씩 보기',
      search: '검색 : ',
      zeroRecords: '검색된 데이터가 없습니다.',
      paginate: {
        first: '첫 페이지',
        last: '마지막 페이지',
        next: "<i class='fa fa-chevron-right'></i>",
        previous: "<i class='fa fa-chevron-left'></i>",
      },
      aria: {
        sortAscending: ' :  오름차순 정렬',
        sortDescending: ' :  내림차순 정렬',
      },
    }

    window.onload = () => {
      $('#startDate, #endDate').datepicker({
        dateFormat: 'yy-mm-dd',
        format: 'yyyy-mm-dd',
        autoclose: true,
        todayHighlight: true,
        placement: 'bottom',
        orientation: 'auto bottom',
        defaultDate: new Date()
      });

      const today = new Date();
      const year = today.getFullYear();
      const month = String(today.getMonth() + 1).padStart(2, '0');
      const day = String(today.getDate()).padStart(2, '0');
      const formattedDate = year + '-' + month + '-' + day;
      console.log(formattedDate);

      $('#startDate, #endDate').datepicker('setDate', formattedDate);


    }

    $(document).ready(function () {
      const DT = $('#dataTable').DataTable({
        language: lang,
        bFilter: false,
        ordering: false,
        lengthChange: false,
        columns: [
          { width: '10px' },
          { width: '10px' },
          { width: '20%' },
          null,
          { width: '20%' },
        ],
      });
      selectContentApi(DT);

      $('#dataTable tbody').on('click', 'tr.content-list', function () {
        if ($(event.target).is('input[type="checkbox"]')) {
          console.log("ck");
          if ($('.table-ck:checked').length === listcount) {
            $('input[name=table-ck-all]').prop('checked', true);
          } else {
            $('input[name=table-ck-all]').prop('checked', false);
          }
          return;
        }
        const checkboxValue = $(this).find('.table-ck').val();
        const queryString = `?content_id=${checkboxValue}`;
        window.location.href = '/admin/content_detail' + queryString;

      })

      $('#orderSelect').on('change', function () {
        const columnIndex = 4; // 정렬할 열의 인덱스
        const sortDirection = $(this).val(); // 선택한 정렬 방향 값

        const order = [[columnIndex, sortDirection]]; // 정렬 열 인덱스와 방향을 배열로 저장
        if (sortDirection === "asc" || sortDirection === "desc") {
          DT.order(order).draw();
        }

      });
    });


    $('#checkAll').change(function () {
      $('.ck').prop('checked', $(this).prop('checked'));
    });

    $('.ck').change(function () {
      if ($('.ck:checked').length === $('.ck').length) {
        $('#checkAll').prop('checked', true);
      } else {
        $('#checkAll').prop('checked', false);
      }
    });

    $('input[name=table-ck-all]').change(function () {
      $('.table-ck').prop('checked', $(this).prop('checked'));
    });



//리스트 조회
    const selectContentApi = async (DT) => {
      const requestOptions = {
        method: 'GET',
        headers: myHeaders,
        redirect: 'follow'
      };

      try {
        const response = await fetch(`/content/select`, requestOptions);
        const { code, message, data } = await response.json();
        if (code === 200) {
          console.log("조회 성공"+data);
  
          let cate ="";
   
          data.forEach(function (row, i) {
            switch (row.category) {
            case 1:
             cate="풍선 장식"
              break;
            case 2:
            cate="토퍼"
              break;
            case 3:
            cate="삐에로/페이스페인팅"
             break;
            case 4:
            cate="원데이클래스"
            break;
            default:
              console.log(data.file_id);
          }

            const checkbox = $('<input>').attr({
              type: 'checkbox',
              class: 'table-ck',
              value: row.content_id,
              name: "idxArr[]",
              id: "checkbox" + i
            });

            DT.row.add([
              checkbox[0].outerHTML,
              i + 1,
              cate,
              row.title,
              dayjs(row.reg_date).format(
              "YYYY-MM-DD HH:mm:ss"
            )
            ]).node().classList.add('content-list'); // class 추가

            DT.draw(false);


            const pageInfo = DT.page.info();
            listcount = pageInfo.end - pageInfo.start;

          });
          return;
        }
        //alert("정보가 없습니다.");
      } catch (err) {
        console.log('Err:', err);
      }

    }

    const checkID = str => {
      // 8~10자 / 영어 대소문자, 숫자 사용 가능
      return str.trim() === '';
    }



  </script>

